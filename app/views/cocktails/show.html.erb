
<div class="container mt-4">
<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><%= dose.ingredient["name"] %>: <%= dose.description %> </li>
    <p><%= link_to 'Delete', dose_path(dose), method: :delete %></p>
  </ul>
<% end %>

<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
</div>


